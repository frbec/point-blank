@require _typography

$color1 = #45E5A5
$color2 = #0C1061
$grey = #DBDBC3

$page-width = 40rem
$font-size = calc(16px + 4 * (100vw - 320px) / 1046)
$font-size-multiplier = 1.07

/* 16px @ 480px increasing to 24px @ 1920px */
@media (min-width: 480px) {
  :root {
    font-size: calc(1rem + ((1vw - 4.8px) * 0.5556));
    /* Where: * 0.5556 = 100 * font_Size_Difference / viewport_Width_Difference */
  }
}
/* Prevent font scaling beyond this breakpoint */
@media (min-width: 1920px) {
  :root {
    font-size: 24px;
  }
}

html {
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", "Ubuntu", Arial, sans-serif;
  line-height 1.5rem
  -ms-text-size-adjust: 100%;
  -webkit-text-size-adjust: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  box-sizing: border-box;
}

*, *:before, *:after {
  box-sizing: border-box;
  margin: 0;
}

body
  background white

h1, h2, h3, h4, h5, h6
  font-family 'Josefin Sans', sans-serif

p
  font-family 'Josefin Slab', serif
  padding-bottom 0.5rem
  color $color2

main
  width 100%
  min-width 320px

.rounded
  border-radius 5px

.logo
  position relative
  top 6rem
  left 5rem
  width 20rem

#intro
  width 100%
  max-width $page-width
  margin 0 auto
  
.intro_textbox
  background $color1
  width 40rem
  padding 5rem 3rem
  margin 4rem auto 0

.notice
  position relative
  top -3rem
  left -2rem
  padding 2rem
  width 23rem
  background-color rgba($color2, .8)
  transform skewY(2deg)
  p, h2
    transform skewY(-2deg)
    color $color1

.profile
  float right
  position relative
  top 11rem
  left 2rem
  width 14rem

#portfolio
  width 100%
  max-width 60rem
  margin auto
  display flex
  flex-flow wrap row
  justify-content left

.divider
  width 100%
  max-width $page-width
  margin 0 auto
  padding 3rem 0 0
  h2
    color $color1

#portfolio article
  position relative
  max-width calc(50%-1rem)
  margin-bottom 2rem
  &:nth-child(even)
    margin-left 2rem
  img
    display block
  &:hover .overlay
    opacity 1

.overlay
  position absolute
  top 0
  right 0
  bottom 0
  left 0
  display flex
  justify-content center
  background rgba(0,0,0,0.5)
  opacity 0
  h3 
    align-self center

footer
  display flex
  justify-content center

.thumbnail
  width 100%
  height auto

.hero
  position relative
  width 100%
  height 80vh
  overflow hidden
  img
    width 100%
  h1
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

.content
  max-width $page-width
  margin 0 auto
  padding-top 4rem
